<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title" t:menuExplanation="menuExplanation">

<p>
	<a href="#" t:type="PageLink" t:page="user/Login">${message:menu-authenticate}</a>
</p>

<form id="registrationForm" role="form" t:type="Form"
	t:id="registrationForm">
	<t:errors />
	<div class="form-group">
		<t:label for="loginName" />
		<span class="entry"> <input t:id="loginName" t:type="TextField"
			t:validate="required" size="16" maxlength="30" />
		</span>
	</div>

	<div class="form-group">
		<t:label for="password" />
		<span class="entry"> <input t:id="password"
			t:type="PasswordField" t:validate="required" size="16" maxlength="8" />
		</span>
	</div>

	<div class="form-group">
		<t:label for="retypePassword" />
		<span class="entry"> <input t:id="retypePassword"
			t:type="PasswordField" t:validate="required" size="16" maxlength="8" />
		</span>
	</div>

	<div class="form-group">
		<t:label for="firstName" />
		<span class="entry"> <input t:id="firstName" t:type="TextField"
			t:validate="required" size="16" maxlength="30" />
		</span>
	</div>

	<div class="form-group">
		<t:label for="lastName" />
		<span class="entry"> <input t:id="lastName" t:type="TextField"
			t:validate="required" size="16" maxlength="30" />
		</span>
	</div>

	<div class="form-group">
		<t:label for="email" />
		<span class="entry"> <input t:id="email" t:type="TextField"
			t:validate="required,regexp" size="16" maxlength="30" />
		</span>
	</div>

	<div id="register-submit-container">
		<input  class="btn btn-primary" type="submit" 
		value="${message:submit}" />
	</div>
</form>

</html>